<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card mb-4 shadow-sm">
            <video id="my_video_1" class="video-js vjs-default-skin" controls preload="auto" width="640" height="268" data-setup='{ "controls": true, "autoplay": false, "preload": "auto" }' autoplay>
                <source src="<%= @movie.url %>" type="application/x-mpegURL">
            </video>
            <div class="card-body">
                <p class="card-text">
                    <%= @movie.description %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i>
                            <%= View.where(movie_id: @movie.id).count %></a>
                        <% if user_signed_in? && current_user.id == movie.user_id %>
                        <%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-sm btn-outline-primary" %>
                        <% end %>
                    </div>
                    <small class="text-muted">by <a href="/users/<%= @movie.user.id %>">
                            <%= @movie.user.username %></a></small>
                </div>
            </div>
        </div>
    </div>
</div>